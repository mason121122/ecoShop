<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ecoshop.dao.mapper.sys.LoginLogMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.ecoshop.dao.po.sys.LoginLogPO">
        <id column="id" property="id"/>
        <result column="tenant_id" property="tenantId"/>
        <result column="user_name" property="userName"/>
        <result column="ipaddr" property="ipaddr"/>
        <result column="login_location" property="loginLocation"/>
        <result column="browser" property="browser"/>
        <result column="os" property="os"/>
        <result column="status" property="status"/>
        <result column="msg" property="msg"/>
        <result column="login_time" property="loginTime"/>
        <result column="version" property="version"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, tenant_id, user_name, ipaddr, login_location, browser, os, status, msg, login_time,
        version, created_at, updated_at
    </sql>

    <!-- 根据ID查询系统访问记录 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_login_log
        WHERE id = #{id}
    </select>

    <!-- 查询系统访问记录列表 -->
    <select id="selectList" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_login_log
        <where>
            <if test="tenantId != null">
                AND tenant_id = #{tenantId}
            </if>
            <if test="userName != null and userName != ''">
                AND user_name LIKE CONCAT('%', #{userName}, '%')
            </if>
            <if test="ipaddr != null and ipaddr != ''">
                AND ipaddr LIKE CONCAT('%', #{ipaddr}, '%')
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="loginTime != null">
                AND login_time = #{loginTime}
            </if>
        </where>
        ORDER BY login_time DESC
    </select>

    <!-- 新增系统访问记录 -->
    <insert id="insert" parameterType="com.ecoshop.dao.po.sys.LoginLogPO" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO sys_login_log (
            tenant_id, user_name, ipaddr, login_location, browser, os, status, msg, login_time, version
        ) VALUES (
            #{tenantId}, #{userName}, #{ipaddr}, #{loginLocation}, #{browser}, #{os}, #{status},
            #{msg}, #{loginTime}, 1
        )
    </insert>

    <!-- 修改系统访问记录 -->
    <update id="update" parameterType="com.ecoshop.dao.po.sys.LoginLogPO">
        UPDATE sys_login_log
        <set>
            <if test="userName != null">
                user_name = #{userName},
            </if>
            <if test="ipaddr != null">
                ipaddr = #{ipaddr},
            </if>
            <if test="loginLocation != null">
                login_location = #{loginLocation},
            </if>
            <if test="browser != null">
                browser = #{browser},
            </if>
            <if test="os != null">
                os = #{os},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="msg != null">
                msg = #{msg},
            </if>
            <if test="loginTime != null">
                login_time = #{loginTime},
            </if>
            version = version + 1,
            updated_at = CURRENT_TIMESTAMP
        </set>
        WHERE id = #{id} AND version = #{version}
    </update>

    <!-- 删除系统访问记录 -->
    <delete id="deleteById">
        DELETE FROM sys_login_log WHERE id = #{id}
    </delete>

    <!-- 批量删除系统访问记录 -->
    <delete id="deleteBatchIds">
        DELETE FROM sys_login_log WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!-- 清空系统访问记录 -->
    <delete id="cleanLoginLog">
        TRUNCATE TABLE sys_login_log
    </delete>

</mapper> 