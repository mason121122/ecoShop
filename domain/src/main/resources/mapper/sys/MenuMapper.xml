<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ecoshop.dao.mapper.sys.MenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.ecoshop.dao.po.sys.MenuPO">
        <id column="id" property="id"/>
        <result column="tenant_id" property="tenantId"/>
        <result column="parent_id" property="parentId"/>
        <result column="name" property="name"/>
        <result column="path" property="path"/>
        <result column="component" property="component"/>
        <result column="type" property="type"/>
        <result column="icon" property="icon"/>
        <result column="sort" property="sort"/>
        <result column="permission" property="permission"/>
        <result column="status" property="status"/>
        <result column="is_cache" property="isCache"/>
        <result column="is_frame" property="isFrame"/>
        <result column="remark" property="remark"/>
        <result column="version" property="version"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, tenant_id, parent_id, name, path, component, type, icon, sort, permission,
        status, is_cache, is_frame, remark, version, created_at, updated_at
    </sql>

    <!-- 根据ID查询菜单 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_menu
        WHERE id = #{id}
    </select>

    <!-- 查询菜单列表 -->
    <select id="selectList" parameterType="com.ecoshop.dao.po.sys.MenuPO" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_menu
        <where>
            <if test="tenantId != null">
                AND tenant_id = #{tenantId}
            </if>
            <if test="parentId != null">
                AND parent_id = #{parentId}
            </if>
            <if test="name != null and name != ''">
                AND name LIKE CONCAT('%', #{name}, '%')
            </if>
            <if test="type != null">
                AND type = #{type}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>
        ORDER BY sort ASC
    </select>

    <!-- 根据父ID查询菜单列表 -->
    <select id="selectListByParentId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_menu
        WHERE parent_id = #{parentId}
        ORDER BY sort ASC
    </select>

    <!-- 根据用户ID查询菜单列表 -->
    <select id="selectListByUserId" resultMap="BaseResultMap">
        SELECT DISTINCT
        m.<include refid="Base_Column_List"/>
        FROM sys_menu m
        INNER JOIN sys_role_menu rm ON m.id = rm.menu_id
        INNER JOIN sys_user_role ur ON rm.role_id = ur.role_id
        WHERE ur.user_id = #{userId}
        ORDER BY m.sort ASC
    </select>

    <!-- 根据角色ID查询菜单列表 -->
    <select id="selectListByRoleId" resultMap="BaseResultMap">
        SELECT
        m.<include refid="Base_Column_List"/>
        FROM sys_menu m
        INNER JOIN sys_role_menu rm ON m.id = rm.menu_id
        WHERE rm.role_id = #{roleId}
        ORDER BY m.sort ASC
    </select>

    <!-- 新增菜单 -->
    <insert id="insert" parameterType="com.ecoshop.dao.po.sys.MenuPO" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO sys_menu (
            tenant_id, parent_id, name, path, component, type, icon, sort,
            permission, status, is_cache, is_frame, remark, version
        ) VALUES (
            #{tenantId}, #{parentId}, #{name}, #{path}, #{component}, #{type},
            #{icon}, #{sort}, #{permission}, #{status}, #{isCache}, #{isFrame},
            #{remark}, 1
        )
    </insert>

    <!-- 修改菜单 -->
    <update id="update" parameterType="com.ecoshop.dao.po.sys.MenuPO">
        UPDATE sys_menu
        <set>
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="name != null">name = #{name},</if>
            <if test="path != null">path = #{path},</if>
            <if test="component != null">component = #{component},</if>
            <if test="type != null">type = #{type},</if>
            <if test="icon != null">icon = #{icon},</if>
            <if test="sort != null">sort = #{sort},</if>
            <if test="permission != null">permission = #{permission},</if>
            <if test="status != null">status = #{status},</if>
            <if test="isCache != null">is_cache = #{isCache},</if>
            <if test="isFrame != null">is_frame = #{isFrame},</if>
            <if test="remark != null">remark = #{remark},</if>
            version = version + 1
        </set>
        WHERE id = #{id} AND version = #{version}
    </update>

    <!-- 删除菜单 -->
    <delete id="deleteById">
        DELETE FROM sys_menu WHERE id = #{id}
    </delete>

</mapper> 