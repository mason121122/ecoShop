<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ecoshop.dao.mapper.sys.RoleMapper">

    <resultMap id="BaseResultMap" type="com.ecoshop.dao.po.sys.RolePo">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="tenantId" column="tenant_id" jdbcType="BIGINT"/>
            <result property="name" column="name" jdbcType="VARCHAR"/>
            <result property="code" column="code" jdbcType="VARCHAR"/>
            <result property="description" column="description" jdbcType="VARCHAR"/>
            <result property="dataScope" column="data_scope" jdbcType="TINYINT"/>
            <result property="status" column="status" jdbcType="TINYINT"/>
            <result property="sort" column="sort" jdbcType="INTEGER"/>
            <result property="remark" column="remark" jdbcType="VARCHAR"/>
            <result property="version" column="version" jdbcType="INTEGER"/>
            <result property="createdAt" column="created_at" jdbcType="TIMESTAMP"/>
            <result property="updatedAt" column="updated_at" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,tenant_id,name,
        code,description,data_scope,
        status,sort,remark,
        version,created_at,updated_at
    </sql>

    <select id="find" resultMap="BaseResultMap">
        select * from sys_role
        <where>
            <if test="null != tenantId">
                tenant_id = #{tenantId}
            </if>
            <if test="null != name">
                and name = #{name}
            </if>
            <if test="null != code">
                and code = #{code}
            </if>
            <if test="null != status">
                and status = #{status}
            </if>
        </where>
    </select>

    <select id="pageQuery" resultMap="BaseResultMap">
        select *
        from sys_role
        <if test="null != tenantId">
            tenant_id = #{tenantId}
        </if>
        <if test="null != name">
            and name = #{name}
        </if>
        <if test="null != code">
            and code = #{code}
        </if>
        <if test="null != status">
            and status = #{status}
        </if>
        order by updated_at desc
        LIMIT #{offset}, #{pageSize}
    </select>

    <select id="pageCount" resultType="integer">
        select COUNT(id)
        from sys_role
        <if test="null != tenantId">
            tenant_id = #{tenantId}
        </if>
        <if test="null != name">
            and name = #{name}
        </if>
        <if test="null != code">
            and code = #{code}
        </if>
        <if test="null != status">
            and status = #{status}
        </if>
    </select>

    <insert id="add" parameterType="com.ecoshop.dao.po.sys.RolePo">
        insert into sys_role
        <trim prefix="(" suffix=")" suffixOverrides=",">
            tenant_id,name,
            code,description,data_scope,
            status,sort,remark
        </trim>
        VALUES
        <trim prefix="(" suffix=")" suffixOverrides=",">
            #{tenantId},#{name},
            #{code},#{description},#{dataScope},
            #{status},#{sort},#{remark}
        </trim>
    </insert>

    <update id="edit" parameterType="com.ecoshop.dao.po.sys.RolePo">
        update sys_role
        <set>
            <if test="null != tenantId">
                tenant_id = #{tenantId}
            </if>
            <if test="null != name">
                and name = #{name}
            </if>
            <if test="null != code">
                and code = #{code}
            </if>
            <if test="null != description">
                and description = #{description}
            </if>
            <if test="null != dataScope">
                and data_scope = #{dataScope}
            </if>
            <if test="null != sort">
                and sort = #{sort}
            </if>
            <if test="null != remark">
                and remark = #{remark}
            </if>
            <if test="null != status">
                and status = #{status}
            </if>
            <if test="version != null">
                version = #{version} + 1
            </if>
        </set>
        WHERE id = #{id} and version = #{version}
    </update>

    <delete id="del" parameterType="integer">
        delete
        from sys_role
        where id = #{id}
    </delete>
</mapper>
